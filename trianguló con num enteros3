#include <stdio.h>

void imprime (int n);
void regresoreturn (int n);

int  main (void){
    int n;
    printf("Ingrese el limete a llegar:\t ");
    printf("\n");
    scanf("%d", &n);    
    regresoreturn (n);
    return 0;
}
void regresoreturn (int n){
    int i, j, h;
    for (i=n; i>0; i--){
        for (j=n; j>i; j--){
            printf("\t");}
        for (h=i; h>0; h--){
            printf("%d\t", h);
        }
        printf("\n");
    }
}
