#include <stdio.h>

int main (void) {
	int conv,s;
	int num_dec,num;
	int bin[999],oct[999],hex[999], i=0;
	printf("Calculadora de conversiones \n");
	char FIN='n';
	while(FIN!='s' && FIN!='S'){
	printf("\nIndica el numero en decimal: ");
	scanf("%i",&num_dec);
	printf("\nIndica a que base convertir: \n 1)Binario \n 2)Octal \n 3)Hexadecimal \n :");
	scanf("%d", &s);
	num=num_dec;
	conv=0;
	switch (s){	
	case 1:
		i=0;
	while (num_dec!= 0){
    bin[i] = num_dec % 2;
    num_dec = num_dec / 2;
	i++;}
    i--; 
	printf("El numero decimal %d a ",num);
    printf("binario es: ");   
    while (i>=0){
    printf("%i",bin[i]);
    i--;}
	break;
	
	case 2:
		i=0;
	while (num_dec!= 0){
    oct[i] = num_dec % 8;
    num_dec = num_dec / 8;
	i++;}
    i--; 
	printf("El numero decimal %d a ",num);
    printf("octal es: ");   
    while (i>=0){
    printf("%i",oct[i]);
    i--;}
	break;
	case 3:
		i=0;
	while (num_dec!=0){
    hex[i] = num_dec%16;
    num_dec = num_dec /16;
    i++;}
	i--;
	printf("El numero decimal %d a ",num);
	printf("hexadecimal es:",num);
    while (i>=0){
    switch(hex[i]) {
	case 10:
    printf("A");
    break;
	case 11:
    printf("B");
    break;
    case 12:
	printf("C");
    break;
    case 13:
    printf("D");
    break;
    case 14:
    printf("E");
    break;
    case 15:
    printf("F");
    break;
	default:
    printf("%i",hex[i]);
    break;} 
    i--;}
	break;
	default:
	printf ("Error verifica tu marcacion  \n");}
    printf("\n Â¿ Quieres salir? Si/No ");
     scanf("%s",&FIN);}
    printf("\n! Gracias, vete ya, si no encuentras motivos...... ");
 return 0;}
