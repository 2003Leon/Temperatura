#include <stdio.h>
#include<conio.h>

int main(void)
{
    int n;
    printf("\n Introduce el valor:");
    scanf("%d", &n);
    int i;
    for (i = 1; i <=n; i++)
    {
        int j;
        for (j = 0; j < i; j++)
        {
           printf("%d", j+1);
        }
        printf("\n");
    }
    {
    	for (i = n-1; i >=1; i--)
    {
        int j;
        for (j = 0; j < i; j++)
        {
           printf("%d", j+1);
        }
        printf("\n");
	}
    return 0;
}
}
